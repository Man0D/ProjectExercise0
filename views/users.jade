        a( class="col-4" href="https://heroku.com/" )
            img( class="img" src="../images/built-on-heroku-dark.ef2aa337.svg" class="img-fluid mx-auto d-block")
        a( class="col-4" href="https://mlab.com/" )
            img( src="../images/mLab-logo-onlight.png"  class="img-fluid mx-auto d-block")
        a( class="col-4" href="https://nodejs.org/" )
            img( src="../images/nodejs-new-black.png" class="img-fluid mx-auto d-block")