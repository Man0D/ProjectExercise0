extends layout

block content

    div(class="row align-items-center justify-content-between")
        div(class="col-8 col-sm-6 col-lg-4 col-xl-3")
            a(href="/" role="button")
                img(src="/images/logo.png")

        a(class="col-4 col-sm-3 col-lg-2 col-xl-2 " role="button" href="/login")
            button(type="button" class="btn btn-primary")
                b LOG IN

    hr

    div(class="row align-items-center justify-content-start")
        div(class="col-10 col-sm-6 col-lg-4 col-xl-3")
            h2 Sign Up

    br
    div(class="container")
        if(message.length > 0)
            div(class="alert alert-danger")= message

        form(method="post" enctype="application/json")
            div( class="form-group row")
                label(class="col-6 col-md-4 col-lg-3") Username
                div( class="col-12 col-md-8 col-lg-6")
                    input(class="form-control" type="text" name="username")

            div( class="form-group row")
                label(class="col-6 col-md-4 col-lg-3") Email
                div( class="col-12 col-md-8 col-lg-6")
                    input(class="form-control" type="email" name="email")

            div( class="form-group row")
                label(class="col-6 col-md-4 col-lg-3") Password
                div( class="col-12 col-md-8 col-lg-6")
                    input(class="form-control" type="password" name="password")

            //div( class="form-group row")
            //    label(class="col-8 col-md-4 col-lg-3") Password Verification
            //    div( class="col-12 col-md-8 col-lg-6")
            //        input(class="form-control" type="password")
            br
            div(class="row justify-content-center")
                button(class="btn btn-primary" type="submit") Create account


